<me:DateTimePickerControl
    Name="ThisControl"
    x:Class="Reitit.DatePickerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:me="clr-namespace:Reitit"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}">

    <me:DateTimePickerControl.Popup>
        <me:DatePickerPopup/>
    </me:DateTimePickerControl.Popup>

    <Button Content="{Binding Value, ElementName=ThisControl, Converter={StaticResource DatePickerConverter}}"
            Background="Transparent"
            Height="72"
            HorizontalContentAlignment="Left"
            Click="Button_Click"/>

</me:DateTimePickerControl>