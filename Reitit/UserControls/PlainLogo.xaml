<UserControl x:Class="Reitit.PlainLogo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="27" d:DesignWidth="55">
        <Rectangle Width="52" Height="29" Margin="0,-1,0,-10" Fill="{StaticResource PhoneAccentBrush}" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="/Icons/LogoSmall.png" />
            </Rectangle.OpacityMask>
        </Rectangle>
</UserControl>
