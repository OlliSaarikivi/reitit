<UserControl x:Class="Reitit.LogoTitle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:me="clr-namespace:Reitit">

    <StackPanel Margin="0,0,0,0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
        <TextBlock Name="TextBlock" VerticalAlignment="Center" Margin="0" FontSize="{StaticResource PhoneFontSizeMedium}" FontFamily="{StaticResource PhoneFontFamilySemiBold}" />
        <Rectangle Width="52" Height="29" Margin="0,-1,0,-10" Fill="{StaticResource PhoneAccentBrush}" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle.OpacityMask>
                <ImageBrush ImageSource="/Assets/LogoSmall.png" />
            </Rectangle.OpacityMask>
        </Rectangle>
    </StackPanel>
</UserControl>